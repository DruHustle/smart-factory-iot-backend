# ========================================
# Smart Factory IoT Backend - DeviceService
# ========================================
# Manages industrial device metadata, status, and lifecycle
# Follows SOLID principles and Kubernetes best practices
# ========================================

---
# DeviceService Deployment
apiVersion: apps/v1
kind: Deployment
metadata:
  name: device-service
  namespace: smart-factory
  labels:
    app: device-service
    tier: backend
    version: v1
spec:
  # High availability with 2 replicas
  replicas: 2
  
  # Rolling update strategy for zero-downtime deployments
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  
  selector:
    matchLabels:
      app: device-service
  
  template:
    metadata:
      labels:
        app: device-service
        tier: backend
        version: v1
    spec:
      # Security context for pod-level security
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
        fsGroup: 1000
      
      containers:
      - name: device-service
        image: smartfactory.azurecr.io/deviceservice:latest
        imagePullPolicy: Always
        
        # Container ports
        ports:
        - name: http
          containerPort: 80
          protocol: TCP
        - name: https
          containerPort: 443
          protocol: TCP
        
        # Environment variables from ConfigMap and Secrets
        env:
        - name: ASPNETCORE_ENVIRONMENT
          valueFrom:
            configMapKeyRef:
              name: app-config
              key: ASPNETCORE_ENVIRONMENT
        
        - name: ConnectionStrings__DefaultConnection
          valueFrom:
            secretKeyRef:
              name: db-secrets
              key: connection-string
        
        - name: Logging__LogLevel__Default
          valueFrom:
            configMapKeyRef:
              name: app-config
              key: Logging__LogLevel__Default
        
        # Resource limits (Open/Closed Principle - configurable resources)
        resources:
          requests:
            memory: "256Mi"
            cpu: "100m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        
        # Liveness probe - checks if the service is alive
        livenessProbe:
          httpGet:
            path: /health
            port: http
            scheme: HTTP
          initialDelaySeconds: 30
          periodSeconds: 10
          timeoutSeconds: 3
          failureThreshold: 3
          successThreshold: 1
        
        # Readiness probe - checks if the service is ready to handle traffic
        readinessProbe:
          httpGet:
            path: /health/ready
            port: http
            scheme: HTTP
          initialDelaySeconds: 10
          periodSeconds: 5
          timeoutSeconds: 3
          failureThreshold: 3
          successThreshold: 1
        
        # Startup probe - gives the service time to start
        startupProbe:
          httpGet:
            path: /health
            port: http
            scheme: HTTP
          initialDelaySeconds: 0
          periodSeconds: 5
          timeoutSeconds: 3
          failureThreshold: 30
      
      # Restart policy
      restartPolicy: Always
      
      # DNS policy for service discovery
      dnsPolicy: ClusterFirst

---
# DeviceService Service
# Exposes the DeviceService within the cluster
apiVersion: v1
kind: Service
metadata:
  name: device-service
  namespace: smart-factory
  labels:
    app: device-service
    tier: backend
spec:
  type: ClusterIP  # Internal cluster access only
  ports:
  - name: http
    port: 80
    targetPort: http
    protocol: TCP
  selector:
    app: device-service
  # Session affinity for consistent routing (Liskov Substitution Principle)
  sessionAffinity: ClientIP
  sessionAffinityConfig:
    clientIP:
      timeoutSeconds: 10800

---
# Horizontal Pod Autoscaler for DeviceService
# Automatically scales based on CPU utilization
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: device-service-hpa
  namespace: smart-factory
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: device-service
  minReplicas: 2
  maxReplicas: 10
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 70
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 80
  behavior:
    scaleDown:
      stabilizationWindowSeconds: 300
      policies:
      - type: Percent
        value: 50
        periodSeconds: 60
    scaleUp:
      stabilizationWindowSeconds: 0
      policies:
      - type: Percent
        value: 100
        periodSeconds: 30
      - type: Pods
        value: 2
        periodSeconds: 30
      selectPolicy: Max
