apiVersion: apps/v1
kind: Deployment
metadata:
  name: telemetry-service
  namespace: smart-factory
spec:
  replicas: 2
  selector:
    matchLabels:
      app: telemetry-service
  template:
    metadata:
      labels:
        app: telemetry-service
    spec:
      containers:
      - name: telemetry-service
        image: smartfactory.azurecr.io/telemetry-service:latest
        ports:
        - containerPort: 80
        env:
        - name: ConnectionStrings__DefaultConnection
          valueFrom:
            secretKeyRef:
              name: db-secrets
              key: connection-string
---
apiVersion: v1
kind: Service
metadata:
  name: telemetry-service
  namespace: smart-factory
spec:
  type: ClusterIP
  ports:
  - port: 80
    targetPort: 80
  selector:
    app: telemetry-service
